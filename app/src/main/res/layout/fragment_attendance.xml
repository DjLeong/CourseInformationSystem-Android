<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AttendanceFragment"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attendance_textView"
        android:background="@drawable/material"
        android:textSize="18sp"
        android:gravity="center"
        android:singleLine="false"/>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        android:id="@+id/attendance_progress"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.90">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/begin_attendance"
            android:id="@+id/attendance_button"
            android:background="@drawable/btn_shape"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attendance_signinrecord"
        android:text="最近签到："
        android:layout_gravity="bottom"
        android:gravity="center_vertical|center_horizontal"
        android:background="#e0000000"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:alpha="0.85"
        android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
